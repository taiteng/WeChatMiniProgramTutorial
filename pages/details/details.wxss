/* details.wxss */

page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: rgb(255, 255, 255);
}

.scroll-view-container {
  padding: 20rpx;
  height: calc(100% - 150rpx);
  box-sizing: border-box;
}

.image {
  width: 100%;
  height: 500rpx;
  border-radius: 25rpx;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
}

.details {
  font-size: 25rpx;
  line-height: 1.5;
  color: #333;
}

.table-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.table-cell {
  flex: 1;
}

.title-cell {
  flex: 2;
}

.button-cell {
  flex: 1;
}